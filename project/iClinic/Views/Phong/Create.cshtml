@model iClinic.Models.Phong

@{
    ViewBag.Title = "Create";
}

@section PageHeader
{
    Thêm Phòng
}

@section Breadcrumb
{
    <li class="active">Phòng</li>
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Phòng</h3>
        </div>
        <div class="form-horizontal">
            <div class="box-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.TenPhong, "Tên Phòng", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.TenPhong, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.TenPhong)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BoPhanID, "Trực Thuộc", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownList("BoPhanID", null, String.Empty, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.BoPhanID)
                </div>

            </div>
        </div>

        <div class="box-footer">
            <button type="reset" class="btn btn-default">Hủy</button>
            <button type="submit" class="btn btn-info pull-right">Lưu</button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
