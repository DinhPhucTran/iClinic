@model iClinic.Models.BenhNhan

@{
    ViewBag.Title = "Create";
}

@section PageHeader
{
    Bệnh Nhân
}

@section Breadcrumb
{
    <li class="active">Bệnh Nhân</li>
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Bệnh Nhân</h3>
        </div>
        <div class="form-horizontal">
            <div class="box-body">
             
                <div class="form-group">
                    @Html.LabelFor(model => model.TenBenhNhan, "Tên Bệnh Nhân", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.TenBenhNhan, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.TenBenhNhan)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GioiTinh, "Giới Tính", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownList("GioiTinhID", null, String.Empty, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.GioiTinh)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgaySinh, "Ngày Sinh", new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.NgaySinh, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.NgaySinh)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgheNghiep, "Nghề Nghiệp", new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.NgheNghiep, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.NgheNghiep)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DiaChi, "Địa Chỉ", new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.DiaChi)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SoDT, "Số Điện Thoại", new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.SoDT, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.SoDT)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TienSuBenh, "Tiền Sử Bệnh", new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.TienSuBenh, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.TienSuBenh)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgayTiepNhan, "Ngày Tiếp Nhận", new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.NgayTiepNhan, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.NgayTiepNhan)
                </div>
            </div>
        </div>

        <div class="box-footer">
            <button type="reset" class="btn btn-default">Hủy</button>
            <button type="submit" class="btn btn-info pull-right">Lưu</button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
