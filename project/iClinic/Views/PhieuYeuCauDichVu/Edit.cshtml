@model iClinic.Models.PhieuYeuCauDichVu
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Điều Trị";
}

@section Title{
    Điều Trị
}

@section PageHeader
{
    Điều Trị
}

@section Breadcrumb
{
    <li class="active">Điều Trị</li>
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Điều Trị</h3>
                </div>
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaPhieuYeuCauDichVu, "Phiếu Dịch Vụ", new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.MaPhieuYeuCauDichVu, String.Empty, new { @class = "form-control", @readonly = true, id = "MaPhieuYeuCauDichVu" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Tên Bệnh Nhân</label>
                            <div class="col-sm-8">
                                <input class="form-control" id="TenBenhNhan" value="" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ThoiGianThucHien, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <input class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ChiSo, "Chỉ Số", new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.ChiSo, String.Empty, new { @class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.KetQua, "Kết Quả", new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.KetQua, String.Empty, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="reset" class="btn btn-default">Hủy</button>
                    <button type="submit" class="btn btn-info pull-right">Cập Nhật Tình Trạng</button>
                </div>
            </div>
        }
    </div>

    <div class="col-md-6">
        @Html.Action("_SideBenhNhanCho", "PhieuYeuCauDichVu")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/js/pnotify.custom.min.js")"></script>

    <script>
        function selectBenhNhan(MaPhieuYeuCauDichVu, TenBenhNhan) 
        {
            document.getElementById("MaPhieuYeuCauDichVu").value = MaPhieuYeuCauDichVu;
            document.getElementById("TenBenhNhan").value = TenBenhNhan;
        }
    </script>
}
