@model PagedList.IPagedList<iClinic.Models.BoPhan>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
}

@section PageHeader
{
    Danh sách bộ phận
}

@section Breadcrumb
{
    <li class="active">Danh sách bộ phận</li>
}

@*<h2>Index</h2>*@
<div class="box box-info">
    @*<div class="box-header">
            <h3 class="box-title">Danh sách bệnh nhân</h3>
        </div>*@

    <div class="box-body">
        <div class="row">
            <div class="col-sm-6">
                <p>
                    @Html.ActionLink("Thêm mới", "Create")
                </p>
            </div>
            <div class="col-sm-6">
                <div class="pull-right">
                    @using (Html.BeginForm("Index", "BoPhan", FormMethod.Get))
                    {
                        <p>
                            Tìm tên bộ phận: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </p>
                    }
                </div>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.TenBenhNhan)*@
                    @Html.ActionLink("Tên bộ phận", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.GioiTinh)*@
                    Tên bộ phận
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.NgaySinh)*@
                    Trưởng bộ phận
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenBoPhan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
                    </td>
                   <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaBoPhan }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaBoPhan }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaBoPhan })
                    </td>
                </tr>
            }

        </table>

        <br />
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenBoPhan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.TenNhanVien)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenBoPhan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhanVien.TenNhanVien)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaBoPhan }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaBoPhan }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaBoPhan })
        </td>
    </tr>
}

</table>
